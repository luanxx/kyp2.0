<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingAccountManageActivity" 
    android:orientation="vertical">

    
   <include
      
     layout="@layout/settingheader"
     
    />

   <View android:layout_width="match_parent" android:layout_height="10dip"
       android:background="@color/settingbg"/>
       

   <View android:layout_width="match_parent" android:layout_height="1px" android:background="@color/light_gray"/>
       

   
   
   <ListView android:id="@+id/setting_account_list"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:divider="@color/light_gray"
       android:dividerHeight="1px">
       
       
   </ListView>
   
</LinearLayout>
