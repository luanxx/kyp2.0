<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:focusable="true"
    android:focusableInTouchMode="true">
    
    <ImageView android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/middle_blue"/>
    
     <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/translucent_light_blue"
        android:id="@+id/tech_trend_subject_layout"
        android:clickable="true"
       >
        
      <TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"/>
          
    
            
            <TextView android:id="@+id/tech_trend_subject_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:text="物理学"
                android:layout_weight="1"
                style = "@style/common_subject_text_style"/>
            <com.science.view.MyImageButton android:id="@+id/tech_trend_subject_extend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_extend"
                />
        
    </LinearLayout>
    
        <ImageView android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/middle_blue"/>

        <com.science.view.MyPullToRefreshListView android:id="@+id/tech_trend_acdm_affr_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/middle_gray"
            android:dividerHeight="1dip"
            android:layout_marginBottom="50dip"
            >
     
            
       </com.science.view.MyPullToRefreshListView>
</LinearLayout>
