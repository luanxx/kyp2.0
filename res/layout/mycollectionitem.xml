<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="15dip"
    android:paddingBottom = "15dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip">
	<ImageView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/wodeshoucangyuandian"
	    android:background="@color/white"
	    android:scaleType="fitCenter"
	    android:id="@+id/myCollectionYuanDian"
	    />
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
        android:ellipsize="end"
        android:maxLines="3"
        android:maxEms="18"
        android:layout_marginLeft="10dip"
	    android:id="@+id/myCollectionItemTitle"
	    android:text="北京市关于征集2014年"
	    android:background="@color/white"
	    android:textColor="@color/text_dark_gray"
	    android:textSize="16sp"
	    
	    />
	<View android:layout_weight="1" android:layout_width="0dip" android:layout_height="wrap_content" />
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/myCollectionItemsTime"
	    android:text="4小时"
	    android:layout_gravity="right"
	    android:background="@color/white"
	    />
</LinearLayout>
