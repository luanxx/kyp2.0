<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include 
        layout="@layout/settingheader"
        />
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/middle_blue"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/wofabudeziyuan"
            android:background="@color/white"
            android:id="@+id/mypublishresource"
            />
        <ImageButton 
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/wofabudexuqiu"
            android:background="@color/white"
            android:id="@+id/mypublishneed"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
	        android:id="@+id/mypublicviewswitch"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>

</LinearLayout>
