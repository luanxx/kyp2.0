<?xml version="1.0" encoding="utf-8" ?>

 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="wrap_content"
     android:layout_height="match_parent"
     style = "@style/release_select_style1"
     android:id="@+id/release_select_box_layout"
     
   >
           
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
               style = "@style/release_text_style1"
               android:text="名称"
               android:layout_marginLeft="5dip"
               
               android:id="@+id/release_select_text"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
      <com.science.view.MyImageButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/icon_release_extend"
               android:layout_marginLeft="5dip"
               android:id="@+id/release_select_btn"
               android:layout_gravity="center_vertical|right"
               android:layout_marginRight="3dip"
              />

</LinearLayout>
