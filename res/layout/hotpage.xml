<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hotepagebackground" >
    

    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:scrollbars="none">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hotpagecontent"
            android:orientation="vertical"
            android:paddingTop="15dip"
            android:paddingBottom="15dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip">
            
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:id="@+id/hotpageblock1"
				    android:orientation="vertical"
				    >
				    <com.science.view.NoScrollListView 
	                     android:layout_width="match_parent"
	                     android:layout_height="match_parent"
	                     android:background="@color/white"
	                     android:id="@+id/hotpageListView1"/>	                     
	                 

				    
                	  <ProgressBar
					      android:id="@+id/hotpageProgressBar"
					      android:layout_width="wrap_content"
					      android:layout_height="wrap_content"
					      android:layout_gravity="center_horizontal"
					      />
				</LinearLayout>
  	                 
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
				    android:orientation="vertical"
				    >
	                  <com.science.view.NoScrollListView 
	                     android:layout_width="match_parent"
	                     android:layout_height="wrap_content"
	                     android:background="@color/white"
	                     android:id="@+id/hotpageListView2"/> 		                     
	                 
				</LinearLayout>
								<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
				    android:orientation="vertical"
				    >
	                  <com.science.view.NoScrollListView 
	                     android:layout_width="match_parent"
	                     android:layout_height="wrap_content"
	                     android:background="@color/white"
	                     android:id="@+id/hotpageListView3"/> 		                     
	                 
				</LinearLayout>
				<LinearLayout 
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
				    android:orientation="vertical"
				    >
	                 <com.science.view.NoScrollListView 
	                     android:layout_width="match_parent"
	                     android:layout_height="wrap_content"
	                     android:background="@color/white"
	                     android:id="@+id/hotpageListView4"/> 		                     
	                 
				</LinearLayout>

        </LinearLayout>
                      
    </ScrollView>
</LinearLayout>
