<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#e2e2e2">
    

    
        
        
        <include 
        layout="@layout/settingheader"
        />
    
        
        
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" 
            
            >
            
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"
                android:background="@null"
                android:layout_marginTop="20dip"/>
            <TextView android:id="@+id/setting_setting_about_version_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:textColor="@color/text_dark_gray"
                android:textSize="15sp"
                android:text="版本号   0.1"
                android:layout_marginTop="10dip"/>
        </LinearLayout>
    
        
        
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dip" android:layout_weight="1"
            android:orientation="vertical"
            
            >
            
            <LinearLayout android:layout_width="match_parent" android:layout_height="0dip"
                android:layout_weight="1"
                android:paddingLeft="5dip"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:id="@+id/setting_setting_version_check"
                android:focusable="true"
                android:focusableInTouchMode="true"
                >
                
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
                 android:textSize="15sp" android:text="检测更新" android:textColor="@color/black"
                 />
                
            </LinearLayout>
            
            
            <LinearLayout android:layout_width="match_parent" android:layout_height="0dip"
                android:layout_weight="1"
                android:paddingLeft="5dip"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:gravity="center_vertical"
                android:layout_marginTop="1px"
                android:background="@color/white">
                
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
                 android:textSize="15sp" android:text="版本说明" android:textColor="@color/black"
                 />
                
            </LinearLayout>
            
            
            <LinearLayout 
                android:id="@+id/setting_setting_fankui"
                android:layout_width="match_parent" android:layout_height="0dip"
                android:layout_weight="1"
                android:paddingLeft="5dip"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:gravity="center_vertical"
                android:layout_marginTop="1px"
                android:background="@color/white">
                
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
                 android:textSize="15sp" android:text="反馈" android:textColor="@color/black"
                 />
                
            </LinearLayout>
            
            
           <LinearLayout android:layout_width="match_parent" android:layout_height="0dip"
                android:layout_weight="1"
                android:paddingLeft="5dip"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:gravity="center_vertical"
                android:layout_marginTop="1px"
                android:background="@color/white">
                
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" 
                 android:textSize="15sp" android:text="去评分" android:textColor="@color/black"
                 />
                
            </LinearLayout>
            
            
            
        </LinearLayout>
        
        
        
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dip" android:layout_weight="1">
            
            
        </LinearLayout>
        
        
</LinearLayout>
